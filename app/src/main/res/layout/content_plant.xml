<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Plant"
    tools:showIn="@layout/activity_plant">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/treegrow"
        android:layout_width="344dp"
        android:layout_height="273dp"
        android:visibility="gone"
        android:background="@drawable/buttonroundededgeswhite"
        android:src="@drawable/treegrow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.434" />

    <TextView
        android:id="@+id/texttreegrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.683" />

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Suggestions"
        android:textColor="#000"
        android:textSize="30sp"
        android:visibility="gone"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.087"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.039" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.24">
        <TextView
            android:id="@+id/ttext1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#008000"
            android:textSize="20sp"
            android:paddingLeft="55dp"
            android:textStyle="bold"
            android:visibility="gone"
            android:paddingTop="50dp"
            />


        <TextView
            android:id="@+id/ttext2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#008000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="gone"
            android:paddingLeft="55dp"
            android:paddingTop="50dp"
            />


        <TextView
            android:id="@+id/ttext3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#008000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="gone"
            android:paddingLeft="55dp"
            android:paddingTop="50dp"
            />


        <TextView
            android:id="@+id/ttext4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#008000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="gone"
            android:paddingLeft="55dp"
            android:paddingTop="50dp"
            />


        <TextView
            android:id="@+id/ttext5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="55dp"
            android:textColor="#008000"
            android:textSize="20sp"
            android:paddingTop="50dp"
            android:visibility="gone"
            android:textStyle="bold"
            />

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>